<?xml version="1.0" encoding="UTF-8"?>
<FindBugsFilter>
    <!-- Include dead code detection rules -->
    <Match>
        <Bug pattern="DLS_DEAD_LOCAL_STORE"/>
    </Match>
    <Match>
        <Bug pattern="UC_USELESS_CONDITION"/>
    </Match>
    <Match>
        <Bug pattern="UC_USELESS_OBJECT"/>
    </Match>
    <Match>
        <Bug pattern="UC_USELESS_VOID_METHOD"/>
    </Match>
    <Match>
        <Bug pattern="UUF_UNUSED_FIELD"/>
    </Match>
    <Match>
        <Bug pattern="URF_UNREAD_FIELD"/>
    </Match>
    <Match>
        <Bug pattern="UWF_UNWRITTEN_FIELD"/>
    </Match>
    <Match>
        <Bug pattern="IP_PARAMETER_IS_DEAD_BUT_OVERWRITTEN"/>
    </Match>
    <Match>
        <Bug pattern="DLS_DEAD_LOCAL_STORE_IN_RETURN"/>
    </Match>
    <Match>
        <Bug pattern="DLS_DEAD_LOCAL_STORE_OF_NULL"/>
    </Match>
    <Match>
        <Bug pattern="DLS_DEAD_LOCAL_STORE_SHADOWS_FIELD"/>
    </Match>
    
    <!-- Exclude data directory from analysis -->
    <Match>
        <Source name="~.*data/.*"/>
    </Match>
</FindBugsFilter>
